{%extends '../../layout.njk'%}

{%block content%}
<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Cadastro de categorias</h2>
        </div>
        <div class="card-body">
            <form action="/categories/save" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="Insira o titulo da categoria">
                </div>
                <button class="btn btn-success">Cadastrar</button>
            </form>
        </div>
    </div>

</div>
{%endblock%}