{%extends '../../layout.njk'%}

{%block content%}
<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Edição de categorias</h2>
        </div>
        <div class="card-body">
            <form action="/categories/update/{{category.id}}" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="title" value="{{category.title}}" placeholder="Insira o titulo da categoria">
                </div>
                <button class="btn btn-success">Atualizar</button>
            </form>
        </div>
    </div>

</div>
{%endblock%}