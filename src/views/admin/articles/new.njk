{%extends '../../layout.njk'%}

{%block content%}
<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>Novo artigo</h2>
        </div>
        <div class="card-body">
            <form action="/articles/save" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="title" placeholder="Insira o titulo do artigo">
                </div>
                <div class="form-group">
                    <textarea  class="form-control"name="body" placeholder="Escreva o artigo aqui"></textarea>
                </div>
                <button class="btn btn-success">Cadastrar</button>
            </form>
        </div>
    </div>

</div>
{%endblock%}