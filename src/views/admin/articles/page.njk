{%extends "../../layout.njk"%}

{%block content%}
<div class="container">
    <hr>
    {%for article in articles.rows%}
        <div class="card">
                <div class="card-header">
                    <h2>{{article.title}}</h2>
                </div>
            <div class="card-body">
                <a href="/{{article.slug}}" class="btn btn-success">Ler artigo</a>
            </div>
        </div><br>
    {%endfor%}
</div>
{%endblock%}
